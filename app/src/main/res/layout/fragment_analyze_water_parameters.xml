<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".ui.user.menuModules.waterUser.AnalyzeWaterParameters">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blueSena"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/imgBtnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/black" />

                <LinearLayout
                    android:id="@+id/linearLayout17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/round_corners"
                    android:backgroundTint="@color/white"
                    android:orientation="vertical"
                    android:padding="8dp"
                    app:layout_constraintStart_toStartOf="@+id/imgBtnBack"
                    app:layout_constraintTop_toBottomOf="@+id/txtVPopulatedCenter">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/abastecimiento_dle_lugar"
                        android:textColor="@color/blueSena"
                        android:textSize="@dimen/titles"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtILSurfaceSources"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/purple_500"
                        android:hint="@string/surface_sources"
                        android:textColorHint="@color/blueDarkSena"
                        app:boxBackgroundMode="outline"
                        app:endIconMode="clear_text"
                        app:hintTextColor="@color/blueDarkSena">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtSurfaceSources"
                            android:layout_width="match_parent"
                            android:padding="8dp"
                            android:layout_height="match_parent"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtILUnderGroundSources"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/purple_500"
                        android:hint="@string/underground_sources"
                        android:textColorHint="@color/blueDarkSena"
                        app:boxBackgroundMode="outline"
                        app:endIconMode="clear_text"
                        app:hintTextColor="@color/blueDarkSena">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtUndergroundSources"
                            android:layout_width="match_parent"
                            android:padding="8dp"
                            android:layout_height="match_parent"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtILCatchmentType"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/purple_500"
                        android:hint="@string/tipo_de_captaci_n"
                        android:textColorHint="@color/blueDarkSena"
                        app:boxBackgroundMode="outline"
                        app:endIconMode="clear_text"
                        app:hintTextColor="@color/blueDarkSena">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtCatchemntType"
                            android:layout_width="match_parent"
                            android:padding="8dp"
                            android:layout_height="match_parent"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/txtVMunicipality"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/orangeSena"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/imgBtnBack"
                    app:layout_constraintTop_toTopOf="@+id/imgBtnBack"
                    tools:text="PopayÃ¡n" />

                <TextView
                    android:id="@+id/txtVPopulatedCenter"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/blueDarkSena"
                    android:textSize="20sp"
                    android:textStyle="bold"


                    app:layout_constraintStart_toStartOf="@+id/txtVMunicipality"
                    app:layout_constraintTop_toBottomOf="@+id/txtVMunicipality"
                    tools:text="Cajibio" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveAnalysis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:backgroundTint="@color/white"
                    android:text="@string/saveAnalysis"
                    android:textColor="@color/blueSena"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/cardView"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout17"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout17" />

                <TextView
                    android:id="@+id/txtVDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="2/8/2022 5:45 pm" />

                <ProgressBar
                    android:id="@+id/btnSaveProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintEnd_toEndOf="@+id/txtVDate"
                    app:layout_constraintTop_toTopOf="@+id/linearLayout17">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="1dp"
                        android:text="@string/typeSample"
                        android:textColor="@color/blueSena"
                        android:textSize="13sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <RadioButton
                                android:id="@+id/cbNaturalWater"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/naturalWater" />


                            <RadioButton
                                android:id="@+id/cbTreatedWater"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/treatedWater" />


                            <RadioButton
                                android:id="@+id/cbResidualWater"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/residualWater" />


                            <RadioButton
                                android:id="@+id/cbOtherWater"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/other" />


                        </RadioGroup>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/screenSamples"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/corner_white_right_radious"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/selectSample"
                        android:textColor="@color/graySenaVariant"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1.5"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp">

                            <AutoCompleteTextView
                                android:id="@+id/txtFParameter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:alpha=".6"
                                android:completionHint="Seleccione un parametro"
                                android:completionThreshold="1"
                                android:hint="@string/analyzeParameters"
                                android:textColor="@color/blueDarkSena"
                                android:textColorHint="@color/blueDarkSena"
                                app:hintTextColor="@color/blueDarkSena" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddSample"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:backgroundTint="@color/blueSena"
                            android:text="@string/addSample"
                            app:icon="@drawable/ic_baseline_add_24" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <SearchView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="@string/feature"
                        android:textColor="@color/blueDarkSena"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:padding="8dp"
                        android:text="@string/samples"
                        android:textColor="@color/graySenaVariant"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_samples"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/noSamples"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/noSamples"
                        android:textColor="@color/graySenaVariant"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/screenNoAnalysis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/noAnalysis"
                    android:textColor="@color/graySenaVariant"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/screen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>